<div class="page-header">
  <h1>Course #<%= @course.id %></h1>
</div>

<p>
  <b>Department:</b>
  <%= @course.department %>
</p>

<p>
  <b>Number:</b>
  <%= @course.number %>
</p>

<p>
  <b>Title:</b>
  <%= @course.title %>
</p>

<div class="col-md-2">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Held on</th>
      </tr>
    </thead>

    <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
          <td><%= meeting.held_on %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>